{% extends '@LinkORBWiki/base.wiki.html.twig' %}

{% block body %}
  <h1>{% if wiki.id %} Edit {% else %} Add {% endif %} Wiki </h1>
  {{ form_start(form) }}

  <fieldset>
    <legend>Wiki details</legend>
    {{ form_widget(form) }}

    <div class="buttonbox">
      <a href="{{ path('wiki_index') }}" class="btn btn-primary">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
        Back
      </a>
      <button class="btn btn-success">{{ button_label|default('Save') }}</button>
    </div>
  </fieldset>
  {{ form_end(form) }}

  {% if wiki.id %}
    <div>
      <form action="{{ path('wiki_delete', {'wikiName': wiki.name}) }}"
            method="post"
            onsubmit="return confirm('Are you sure you want to delete this wiki?')">
        <button type="submit" class="btn btn-danger">
          <i class="icon-lux-trash"></i>
          Delete
        </button>
      </form>
    </div>
  {% endif %}
{% endblock %}
