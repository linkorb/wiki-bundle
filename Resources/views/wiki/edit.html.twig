{% extends '@Wiki/base.wiki.html.twig' %}

{% block body %}
    <h1>{% if wiki.id %} Edit {% else %} Add {% endif %} Wiki </h1>
    {{ form_start(form) }}

    <fieldset>
        <legend>Wiki details</legend>
        {{ form_widget(form) }}

        <div class="buttonbox">
            <a href="{{ path('wiki_index') }}"   class="btn btn-primary" >
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                Back
            </a>
            {% if wiki.id %}
            <a href="{{ path('wiki_delete', {'wikiName': wiki.name}) }}" class="btn btn-danger" onclick="return confirm('Are you sure?')" >
                <i class="fa fa-trash"></i> Delete
            </a>
            {% endif %}
            <button class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </fieldset>
    {{ form_end(form) }}
{% endblock %}
